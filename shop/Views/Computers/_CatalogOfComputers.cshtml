@model IEnumerable<shop.Models.Computer>
<head>
    <style>
        .grid_hover {
            position: relative;
            top: 0;
            left: 0;
            display: inline-block;
            width: 30%;
            min-width: 360px;
            margin: 20px;
            height: auto;
            -webkit-box-shadow: 0px 0px 16px -2px rgba(194, 194, 194, 1);
            -moz-box-shadow: 0px 0px 16px -2px rgba(194, 194, 194, 1);
            box-shadow: 0px 0px 16px -2px rgba(194, 194, 194, 1);
        }

            .grid_hover > a {
                color: black;
                font-size: 18px;
                text-decoration: none;
                width: 100%;
                height: 100%;
                margin: 0;
            }

            .grid_hover > input {
                margin: 0;
            }


            .grid_hover:hover {
                -webkit-box-shadow: 0px 0px 15px 5px rgba(34, 60, 80, 0.2);
                -moz-box-shadow: 0px 0px 15px 5px rgba(34, 60, 80, 0.2);
                box-shadow: 0px 0px 15px 5px rgba(34, 60, 80, 0.2);
                transition: 0.2s;
                cursor: pointer;
            }

                .grid_hover:hover .info_cards {
                    background-color: white;
                    transition: 0.3s;
                }

        .head_cards {
            position: relative;
            top: 0;
            left: 0;
            width: 100%;
            height: 3vw;
            color: white;
            font-weight: 500;
            font-size: calc(16px + 0.5vw);
            background-color: #27282c;
        }

        .center_head {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
            margin: 0;
        }

        .info_cards {
            position: relative;
            top: 0;
            left: 0;
            width: 90%;
            padding: 5%;
            height: auto;
            background-color: #f5f5f5;
            line-height: 2;
        }
    </style>
</head>
@{
    int count = 0;
}


@foreach (var item in Model)
{
    <div class="grid_hover">

        <div class="head_cards">
            <div class="center_head">
                Название:  @Html.DisplayFor(modelItem => item.Name)
                Цена:  @Html.DisplayFor(modelItem => item.Price)
            </div>
        </div>

    </div>
    count++;
}

@if (count == 0)
{
    <h2>Нет подходящих</h2>
}


